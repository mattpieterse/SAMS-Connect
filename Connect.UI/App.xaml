<Application
    x:Class = "Connect.UI.App"
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:u = "http://schemas.lepo.co/wpfui/2022/xaml"
    ShutdownMode = "OnMainWindowClose"
    Startup = "OnStartup">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- WPF FluentUI -->

                <u:ThemesDictionary
                    Theme = "Light" />
                <u:ControlsDictionary />

                <!-- Custom Theme -->

                <ResourceDictionary
                    Source = "Assets/Styles/Colors.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Theme.Light.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Theme.Night.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
