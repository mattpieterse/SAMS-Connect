<u:FluentWindow
    x:Class = "Connect.UI.Shells.Shell"
    x:Name = "Window"
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s = "clr-namespace:Lepo.i18n.Wpf;assembly=Lepo.i18n.Wpf"
    xmlns:u = "http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:l = "clr-namespace:Connect.UI.Shells"
    c:Ignorable = "d"
    Title = "{s:StringLocalizer 'app.name'}"
    Icon = "../Assets/Image/appicon.ico"
    WindowStartupLocation = "CenterScreen"
    ScrollViewer.VerticalScrollBarVisibility = "Disabled"
    ScrollViewer.HorizontalScrollBarVisibility = "Disabled"
    ScrollViewer.CanContentScroll = "False"
    u:ExtendsContentIntoTitleBar = "True"
    u:WindowBackdropType = "Mica"
    u:Design.Background = "{DynamicResource ApplicationBackgroundBrush}"
    u:Design.Foreground = "{DynamicResource TextFillColorPrimaryBrush}"
    Foreground = "{DynamicResource TextFillColorPrimaryBrush}"
    d:DataContext = "{d:DesignInstance l:ShellViewModel}"
    d:DesignHeight = "800"
    d:DesignWidth = "1252"
    MinHeight = "800"
    MinWidth = "800">

    <!-- UI -->

    <Grid>
        <u:NavigationView
            x:Name = "NavigationView"
            TitleBar = "{Binding ElementName=WindowHandle, Mode=OneWay}"
            MenuItemsSource = "{Binding NavigationHeaderItems, Mode=OneWay}"
            FooterMenuItemsSource = "{Binding NavigationFooterItems, Mode=OneWay}"
            IsBackButtonVisible = "Collapsed"
            IsPaneOpen = "False"
            Transition = "FadeInWithSlide"
            Loaded = "NavigationView_OnLoaded"
            OpenPaneLength = "220">
            <!--
            <u:NavigationView.AutoSuggestBox>
                <u:AutoSuggestBox
                    Icon = "{u:SymbolIcon Search24}"
                    PlaceholderText = "Search"
                    ClearButtonEnabled = "True" />
            </u:NavigationView.AutoSuggestBox>
            -->
            <u:NavigationView.ContentOverlay>
                <Grid>
                    <u:SnackbarPresenter
                        x:Name = "Toaster" />
                </Grid>
            </u:NavigationView.ContentOverlay>
        </u:NavigationView>

        <ContentPresenter
            x:Name = "DialogHost" />

        <u:TitleBar
            Grid.Row = "0"
            x:Name = "WindowHandle"
            Title = "{Binding ElementName=Window, Path=Title, Mode=OneWay}"
            CloseWindowByDoubleClickOnIcon = "True"
            Height = "40">
            <u:TitleBar.Icon>
                <u:ImageIcon
                    Source = "../Assets/Image/appicon.ico" />
            </u:TitleBar.Icon>
        </u:TitleBar>
    </Grid>
</u:FluentWindow>
